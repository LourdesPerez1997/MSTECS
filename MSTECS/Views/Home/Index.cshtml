@model List<MSTECS.Models.Client>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card">
    <div class="card-header">
        <h5>Client List</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm"asp-action="Client_Detail" asp-controller="Home" asp-route-idClient="0">New Client</a>
        <hr />

        <table class="table tabletable-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Client_Detail" asp-controller="Home" asp-route-idClient="@item.ClientId">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idClient="@item.ClientId">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
